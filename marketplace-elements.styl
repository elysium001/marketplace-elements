@import 'bower_components/marketplace-frontend/src/media/css/lib';

.mkt-cloak {
    display: none;
}

.mkt-banner {
    background: $dark-gray;
    color: $white;
    display: block;
    line-height: 1.3;
    overflow: hidden;
    position: relative;
}

.mkt-banner-content {
    margin: 2px auto;
    max-width: $max-site-width;
    position: relative;
    text-align: center;

    .close {
        margin: -17px 0 0 0;
        top: 50%;
    }

    .close,
    .close:hover {
        background-color: transparent;
    }

    span {
        display: inline-block;
        margin-top: 10px;
        padding: 0;
    }

    a {
        border-radius: 5px;
        color: #fff;
        display: inline-block;
        margin: 10px;
        padding: 10px;
        text-decoration: none;

        &.spin {
            color: transparent;
            position: relative;

            &:after {
                spinner('install');
                content: "";
                display: block;
                left: unquote('calc(50% - 9px)');
                position: absolute;
                top: unquote('calc(50% - 11px)');
            }
        }
    }
}

.mkt-banner-firefox {
    .mkt-banner-content {
        background: url("../../img/logos/firefox-64.png") no-repeat;
        background-position: 0 50%;
        background-size: 64px 60px;
        min-height: 60px;
        padding: 0 40px 0 70px;
    }

    a {
        background-color: $darker-gray;

        &:hover {
            background-color: darken($darker-gray, 10%);
        }
    }
}

.mkt-banner-success {
    background: $action-success;

    .mkt-banner-content {
        font-size: 15px;
        font-weight: 500;
        padding: 0 40px;
    }

    small {
        font-size: 15px;
        font-weight: 400;
    }

    a {
        background-color: $dark-green;

        &:hover {
            background-color: darken($dark-green, 10%);
        }
    }
}

.mkt-segmented-select {
    display: none;
}

.mkt-segmented-button {
    background: $white;
    border-color: $action-positive;
    border-style: solid;
    border-width: 1px 1px 1px 0;
    color: $action-positive;
    cursor: pointer;
    outline: none;
    padding: 10px;

    &:first-of-type {
        border-radius: 5px 0 0 5px;
        border-width: 1px;
    }

    &:last-of-type {
        border-radius: 0 5px 5px 0;
    }

    &[selected] {
        background: $action-positive;
        border-color: $action-positive;
        color: $white;
    }

    &:hover {
        background: $action-positive-hover;
        border-color: $action-positive-hover;
        color: $white;
    }

    &:active {
        background: $action-positive-tapped;
        border-color: $action-positive-tapped;
        color: $white;
    }
}

.mkt-tab-control-select {
    display: none;
}

.mkt-tab-control-button {
    background: transparent;
    border-color: transparent;
    border-style: solid;
    border-width: 0 0 3px 0;
    color: $black;
    cursor: pointer;
    margin: 0 5px;
    outline: none;
    padding: 5px 0;
    text-transform: uppercase;

    &[selected] {
        border-color: $action-positive;
        color: $action-positive;
    }

    &:hover {
        border-color: $action-positive-hover;
        color: $action-positive-hover;
    }

    &:active {
        border-color: $action-positive-tapped;
        color: $action-positive-tapped;
    }
}

.mkt-tabs {
    .mkt-tab {
        display: none;

        &.mkt-tab-active {
            display: block;
        }
    }
}

@media (min-width: 1025px) {
    .mkt-banner-content {
        padding: 0;
    }
}

@media $narrower-than-desktop {
    .mkt-banner small {
        display: none;
    }
}

/*
    .mkt-prompt - form as full width of page. Has only a full-width submit btn.
    .mkt-prompt[data-modal] - modal overlay. Has 50%-width cancel/submit btns.
*/
.mkt-prompt {
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    position: relative;
    width: 100%;

    section {
        background: $white;
        padding-bottom: 10px;

        > form:first-child,
        > div:first-child {
            padding: 5px 20px;
        }
    }
    form {
        > div:not(:last-child) {
            margin-bottom: 20px;
            width: 100%;
        }
        > div:last-child {
            position: relative;
        }
    }
    h3 {
        font-weight: 500;
        margin-top: 20px;
    }
    p {
        font-size: $font-size;
        line-height: 22px;
        margin: 15px 0;
    }
    textarea {
        border: 1px solid $greyscale-light-grey;
        font-family: $primary-font-family;
        margin-bottom: 25px;
        min-height: 100px;
        padding: 10px;
        width: 100%;
    }
    select {
        width: 100%;
    }
}

.mkt-prompt div > button {
    border: 0;
    color: $white;
    font-size: 13px;
    font-weight: 400;
    height: 48px;
    width: 100%;

    &:hover {
        cursor: pointer;
    }
    &:first-child {
        display: none;  // Don't show cancel button as a page.
        background: $action-error;
        left: 0;

        &:hover {
            background: $action-error-hover;
        }
        &:active {
            background: $action-error-tapped;
        }
    }
    &:last-child {
        background: $action-success;
        right: 0;

        &:hover {
            background: $action-success-hover;
        }
        &:active {
            background: $action-success-tapped;
        }
    }
}

.mkt-prompt[data-modal] {
    background: alpha($greyscale-grey, .8);
    height: 100%;
    left: 0;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;  // TODO: write a z-index system.

    section {
        border-radius: 0;
        padding-bottom: 0;
        position: absolute;
        left: 0;
        margin: 5% auto 0;
        max-width: ($max-site-width / 2)px;
        right: 0;
        width: 90%;
    }
    form > div:last-child {
        position: static;
    }
    div > button {
        position: absolute;
        width: 50%;

        &:first-child {
            display: inline-block;
        }
    }
}

@media $base-tablet {
    .mkt-prompt section {
        margin-bottom: 20px;
    }
    .mkt-prompt[data-modal] section {
        width: (100 / 3 * 2)%;
    }
}
